<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="24dp"
    android:background="@android:color/transparent">

    <!-- Titolo con icona -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingBottom="16dp">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="ðŸ”— Link salvati"
            android:textSize="22sp"
            android:textStyle="bold"
            android:textColor="#000000" />

        <!-- Contatore link -->
        <TextView
            android:id="@+id/tvLinkCount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0"
            android:textSize="14sp"
            android:textColor="#666666"
            android:background="@drawable/badge_background"
            android:paddingHorizontal="8dp"
            android:paddingVertical="2dp" />
    </LinearLayout>

    <!-- Messaggio "nessun link" migliorato -->
    <LinearLayout
        android:id="@+id/llNoLinks"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:orientation="vertical"
        android:gravity="center"
        android:visibility="gone"
        android:background="@drawable/rounded_empty_state">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ðŸ“­"
            android:textSize="32sp"
            android:paddingBottom="8dp" />

        <TextView
            android:id="@+id/tvNoLinks"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nessun link salvato"
            android:textColor="#666666"
            android:textSize="16sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Aggiungi il primo dalla pagina dell'addon"
            android:textColor="#999999"
            android:textSize="12sp"
            android:paddingTop="4dp" />
    </LinearLayout>

    <!-- Lista link - altezza dinamica -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvLinks"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="80dp"
        android:maxHeight="400dp"
        android:scrollbars="vertical"
        android:padding="2dp"
        android:clipToPadding="false"
        android:overScrollMode="never" />

    <!-- Divisore sopra i pulsanti -->
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="12dp"
        android:background="#EEEEEE" />

    <!-- Pulsanti azione -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">

        <Button
            android:id="@+id/btnClose"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:layout_marginEnd="8dp"
            android:text="Chiudi"
            android:background="@drawable/btn_outline"
            android:textColor="#666666"
            android:textSize="14sp"
            android:stateListAnimator="@null" />

        <Button
            android:id="@+id/btnClearAll"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:layout_marginStart="8dp"
            android:text="Elimina tutti"
            android:background="@drawable/btn_outline"
            android:textColor="#FF4444"
            android:textSize="14sp"
            android:stateListAnimator="@null" />
    </LinearLayout>

</LinearLayout>
